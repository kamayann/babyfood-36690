<%= render "shared/header" %>
<!--見出し-->
<div class="d-flex justify-content-center h-80 my-5">
  <div class="d-flex justify-content-center left-box">
    <h2 class="new-meals-index">離乳食編集</h2>
  </div>
  <div class="right-box mr-5">
    <%=form_with model: [@baby,@meal], local: true do |f|%>
      <!--エラー表示-->
      <%= render 'shared/error_messages', model: f.object %>
        <div>
            <%= f.label :食事内容, class:"m-2" %>
            <div>
            <%= f.text_area :food, class:"w-100", placeholder: '(例)にんじん'%>
            </div>
        </div>
        <div>
            <%= f.label :食事日, class:"m-2"%>
            <div>
            <%= raw sprintf(
                      f.date_select(
                        :meal_date,
                        id:"meal-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 2022,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "年", "月") + "日" %>
            </div>
        </div>
        <div class='meal-form__field'>
            <%= f.label :食事時間, class:"m-2"%>
            <div>
            <%= f.collection_select(:meal_time_id, MealTime.all, :id, :name, {}, {class:"w-100"}) %>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <%= f.submit value = '更新', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>