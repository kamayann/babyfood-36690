<!--見出し-->
<div class="d-flex justify-content-center h-80 my-5">
  <div class="w-45 mr-5">
    <h1 class="text-success">Edit Account</h2>
    <!--ページ遷移-->
    <div class="d-flex flex-column">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete ,class: 'btn'%>
      <%= link_to "トップページに戻る", :back, class: 'btn'%>
    </div>
  </div>

    <div class="w-45 mr-5">
      <%= form_with model: current_user, local: true do |f|%>
        <!--エラー表示-->
        <%= render 'shared/error_messages', model: f.object %>
        <!--入力内容-->
        <div>
          <label>ニックネーム</label>
          <div>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>
          
        <div class="mt-3">
          <label>お子さんとのご関係</label>
          <div>
            <%= f.collection_select(:relationship_id, Relationship.all, :id, :name, {}, {}) %>
          </div>
        </div>
          
        <div class="mt-4">
          <%= f.submit "更新"%>
        </div>
      <% end %>
    </div>
</div>

