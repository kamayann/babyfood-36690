<!--見出し-->
<div class="d-flex justify-content-center mh-100 my-5">
  <div class="left-box mr-5">
    <h1 class="edituser-index">Edit Account</h2>
    <!--ページ遷移-->
    <%= link_to "トップページに戻る", :back, class: 'btn btn-link'%>
  </div>

    <div class="right-box mr-5">
      <%= form_with model: current_user, local: true do |f|%>
        <!--エラー表示-->
        <%= render 'shared/error_messages', model: f.object %>
        
        <!--入力内容-->
        <div>
          <label>ニックネーム</label>
          <div>
            <%= f.text_field :nickname, class:"w-100", autofocus: true%>
          </div>
        </div>
          
        <div class="mt-3">
          <label>お子さんとのご関係</label>
          <div>
            <%= f.collection_select(:relationship_id, Relationship.all, :id, :name, {}, {class:"w-100"}) %>
          </div>
        </div>
          
        <div class="d-flex justify-content-center mt-4">
          <%= f.submit "更新", class:"btn btn-primary"%>
        </div>
      <% end %>
    </div>
</div>


