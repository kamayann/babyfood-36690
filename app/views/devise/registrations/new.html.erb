<!--見出し-->
<div class="d-flex justify-content-center h-80 my-5">
  <div class="left-box mr-5">
    <h1 class="signup-index">Sign up</h1>
    <p>すでにユーザー登録がお済みの方は<br>下記からログインしてください</p>
    <!--ログインボタン-->
    <%= render "devise/shared/links"%>
  </div>

  <div class="right-box w-45">
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <div>
        <!--エラー表示-->
        <%= render 'shared/error_messages', model: f.object %>
        <!--入力内容-->
        <div>
          <div class="d-flex flex-row">
            <label>ニックネーム</label>
            <span class="indispensable mb-2 ml-1">必須</span>
          </div>
          <%= f.text_field :nickname, class:"w-100", id:"nickname", placeholder:"例)テスト花子" %>
        </div>
      
        <div >
          <div class="d-flex flex-row mt-3">
            <label >メールアドレス</label>
            <span class="indispensable mb-2 ml-1">必須</span>
          </div>
          <%= f.email_field :email, class:"w-100", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        
        <div>
          <div class="d-flex flex-row mt-3">
            <label>お子さんとの関係</label>
            <span class="indispensable mb-2 ml-1">必須</span>
          </div>
          <%= f.collection_select(:relationship_id, Relationship.all, :id, :name, {}, {class:"w-100"}) %>
        </div>

        <div>
          <div class="d-flex flex-row mt-3">
            <label>パスワード</label>
            <span class="indispensable mb-2 ml-1">必須</span>
          </div>
          <%= f.password_field :password, class:"w-100", id:"password", placeholder:"6文字以上の半角英数字" %>
          <p>※英字と数字の両方を含めて設定してください</p>
        </div>

        <div>
          <div class="d-flex flex-row mt-3">
            <label class="form-text">パスワード(確認)</label>
            <span class="indispensable mt-1 mb-2 ml-1">必須</span>
          </div>
          <%= f.password_field :password_confirmation, class:"w-100", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>

        <div class="d-flex justify-content-center mt-4">
          <%= f.submit "登録", class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

