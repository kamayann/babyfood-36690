<!--見出し-->
<div class="d-flex justify-content-center h-80 my-5">
  <div class="w-45 mr-5">
    <h1 class="text-warning">LogIn</h1>
    <!--ページ遷移-->
    <%= render "devise/shared/links"%>
  </div>

  <div class="w-45 mr-5">
    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
        <!--エラー表示-->
        <div>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <!--入力内容-->
        <div>
          <div class="d-flex flex-row">
            <label >メールアドレス</label>
            <span class="text-red mb-2 ml-1">必須</span>
          </div>
          <%= f.email_field :email, id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>

        <div>
          <div class="d-flex flex-row mt-3">
            <label>パスワード</label>
            <span class="text-red mb-2 ml-1">必須</span>
          </div>
          <%= f.password_field :password, id:"password", placeholder:"" %>
        </div>

        <div class="mt-3">
          <%= f.submit "ログイン"%>
        </div>
    <% end %>
  </div>
</div>

