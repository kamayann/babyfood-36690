<!--見出し-->
<div class="d-flex justify-content-center h-80 my-5">
  <div class="left-box mr-5">
    <h1 class="index">LogIn</h1>
    <!--ページ遷移-->
    <%= render "devise/shared/links"%>
  </div>

  <div class="right-box mr-5">
    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      <div>
        <!--エラー表示-->
        <div>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <!--入力内容-->
        <div>
          <div class="d-flex flex-row">
            <label >メールアドレス</label>
            <span class="indispensable mb-2 ml-1">必須</span>
          </div>
          <%= f.email_field :email, class:"w-100", id:"email", placeholder:"PCもしくは携帯のアドレス", autofocus: true %>
        </div>

        <div>
          <div class="d-flex flex-row mt-3">
            <label>パスワード</label>
            <span class="indispensable mb-2 ml-1">必須</span>
          </div>
          <%= f.password_field :password, class:"w-100", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>

        <div class="d-flex justify-content-center mt-4">
          <%= f.submit "ログイン", class:"btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>

