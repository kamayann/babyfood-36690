<div class='newbaby'>
  <h1>New Baby</h1>
  <%=form_with model: @baby, url: babies_path, local: true do |f|%>
  <%= render 'shared/error_messages', model: f.object %>
    <div class='babyname-form__field'>
        <%= f.label :赤ちゃんのお名前, class: 'babyname-form__label'%>
        <%= f.text_field :nickname, class: 'babyname babyname-form__input', placeholder: '赤ちゃんの名前'%>
    </div>
    <div class='babyname-form__field'>
        <%= f.label :お誕生日, class: 'babyname-form__label'%>
        <%= raw sprintf(
                  f.date_select(
                    :birth_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2022,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <div class='babyname-form__field'>
        <%= f.submit value = '登録', class: 'chat-room-form__action-btn' %>
    </div>
  <% end %>
</div>